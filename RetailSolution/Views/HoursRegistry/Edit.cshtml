@model RetailSolution.Models.ViewModels.HoursRegistryFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Hours Registry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="HoursRegistry.Id" />
            <div class="form-group">
                <label asp-for="HoursRegistry.EmployeesId" class="control-label"></label>
                <select asp-for="HoursRegistry.EmployeesId" asp-items="@(new SelectList(Model.Employees,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="HoursRegistry.Date" class="control-label"></label>
                <input asp-for="HoursRegistry.Date" class="form-control" />
                <span asp-validation-for="HoursRegistry.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursRegistry.Hours" class="control-label"></label>
                <input asp-for="HoursRegistry.Hours" class="form-control" />
                <span asp-validation-for="HoursRegistry.Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursRegistry.Shift"></label>
                <input asp-for="HoursRegistry.Shift" />
                <span asp-validation-for="HoursRegistry.Shift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}